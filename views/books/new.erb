  <ul>
    <li style="float:right"><a href="/">Home</a></li>
    <li><a href="/books">Books</a></li>
    <li><a href="/authors">Authors</a></li>
    <li><a class="active" href="/books/new">Add New Book</a></li>
    <li><a href="/authors/new">Add New Author</a></li>
  </ul>
</nav>

<br>

<form class="books" action="/books" method="post">

  <section>

    <h2>New Book</h2>

      <fieldset>

        <p>
          <label for="title">Title:</label>
            <input type="text" name="title" value="">
        </p>

        <p>
          <label for="author">Author:</label>
            <select id="author" name="author_id">
              <% for author in @authors %>
                <option value="<%= author.id %>">
              <%=  author.fullname() %>
                </option>
              <% end %>
        </p>

        <p>
          <label for="synopsis">Synopsis:</label>
            <input type="text" name="synopsis" value="">
        </p>

        <p>
          <label for="format">Format:</label>
            <select name="format">
              <option value="Paperback">Paperback</option>
              <option value="Hardback">Hardback</option>
            </select>
        </p>

        <p>
          <label for="genre">Genre:</label>
            <input type="text" name="genre" list="genres">
              <datalist id="genre">
                <% for book in @books %>
                <option value="<%= book.genre %>">
                <% end %>
              </datalist>
        </p>

        <p>
          <label for="cost">Buying Cost (per unit):</label>
            <input type="number" required name="cost" min="0" value="0" step=".01">
        </p>

        <p>
          <label for="price">Selling Price:</label>
            <input type="number" required name="price" min="0" value="0" step=".01">
        </p>

        <p>
          <label for="quantity">Quantity:</label>
            <input type="number" required name="quantity" min="0" value="0" step=".01">
        </p>

        <p>
          <input type='submit' value="Submit Book"/>
        </p>

      </fieldset>

  </section>

</form>
