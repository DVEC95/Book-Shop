<form class="books" action="/books" method="post">

  <label for="title">Title:</label>
    <input type="text" name="title" value="<%= @book.title %>">

  <label for="synopsis">Synopsis:</label>
    <textarea name="synopsis" rows="4" cols="40"> <%= @book.synopsis %> </textarea>

  <label for="format">Format:</label>
    <select name="format">
      <option value="Paperback">Paperback</option>
      <option value="Hardback">Hardback</option>
    </select>

  <label for="genre">Genre:</label>
    <input type="text" name="genre" value="genre">

  <label for="cost">Buying Cost (per unit):</label>
    <input type="number" required name="cost" min="0" value="0" step=".01">

  <label for="price">Selling Price:</label>
    <input type="number" required name="price" min="0" value="0" step=".01">

  <label for="quantity">Quantity:</label>
    <input type="number" required name="quantity" min="0" value="0" step=".01">

  <input type='submit' value="Submit Book"/>

</form>
