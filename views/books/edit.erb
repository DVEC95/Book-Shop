<br>

<form class="books" action="/books/<%= @book.id %>" method="post">

  <fieldset>

    <p>
      <label for="title">Title:</label>
        <input type="text" name="title" value="<%= @book.title %>">
    </p>

    <p>
      <label for="author">Author:</label>
        <select id="author" name="author_id">
            <option value="<%= @book.author_id %>"><%= @book.author %></option>
        </select>
    </p>

    <p>
      <label for="format">Format:</label>
        <select name="format">
          <option value="Paperback">Paperback</option>
          <option value="Hardback">Hardback</option>
        </select>
    </p>

    <p>
      <label for="genre">Genre:</label>
        <input type="text" name="genre" value="<%= @book.genre %>">
    </p>

    <p>
      <label for="cost">Buying Cost (per unit):</label>
        <input type="number" required name="cost" min="0" value="<%= @book.cost %>" step=".01">
    </p>

    <p>
      <label for="price">Selling Price:</label>
        <input type="number" required name="price" min="0" value="<%= @book.price %>" step=".01">
    </p>

    <p>
      <label for="quantity">Quantity:</label>
        <input type="number" required name="quantity" min="0" value="<%= @book.quantity %>" step="">
    </p>

    <input type='submit' value="Update Book"/>

    <a href="books/">
      <button>Go Back</button>
    </a>

  </fieldset>

</form>
