<% for author in @authors %>
<hr>
<h2>Name: <%= author.fullname %></h2>
<h2>Active: <% if author.active = true %>
            Yes
            <% elsif author.active = false %>
            No
            <% end %>
</h2>
<button onclick="window.location.href = '/authors/<%= author.id.to_i %>'">View author</button>
<% end %>
